# Environment Variables for GSP Visuals
# Copy this file to .env and fill in your actual values

# YouTube Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here

# Slider Configuration
SLIDER_AUTO_SLIDE=true
SLIDER_DURATION=5000
SLIDER_TRANSITION_SPEED=600
SLIDER_TOUCH_SENSITIVITY=50

# Email Configuration
EMAIL_SERVICE=your_email_service_provider  # e.g., 'gmail', 'sendgrid', 'smtp'
EMAIL_HOST=your_smtp_host                  # e.g., 'smtp.gmail.com' for Gmail
EMAIL_PORT=587                             # e.g., 587 for TLS
EMAIL_SECURE=true                          # true for 465, false for other ports
EMAIL_USER=your_email@example.com          # Your email address
EMAIL_PASSWORD=your_email_app_password     # App password or SMTP password
EMAIL_FROM=your_display_name <your_email@example.com>

# Optional: Email Templates
CONTACT_FORM_RECIPIENT=recipient@example.com
CONTACT_FORM_SUBJECT="New Contact Form Submission"

# Optional: API Keys for Email Services
SENDGRID_API_KEY=your_sendgrid_api_key
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain
